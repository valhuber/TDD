    "version": "0.2.0",
    "configurations": [
        {
            "name": "ApiLogicServer",
            "type": "python",
            "request": "launch",
            "program": "api_logic_server_run.py",
            "redirectOutput": true,
            "justMyCode": false,
            "args": ["localhost", "5656"],
            "console": "integratedTerminal"
        },
        {
            "name": "My Behave",
            "type": "python",
            "request": "launch",
            "cwd": "test/api_logic_server_behave",
            "program": "my_behave.py",
            "redirectOutput": true,
            "justMyCode": false,            
            "console": "integratedTerminal"
        },
        {
            "name": "Behave",
            "type": "python",
            "request": "launch",
            "module": "test/api_logic_server_behave",
            "console": "integratedTerminal",
            "env": {
                "BASE_DIR": "test/api_logic_server_behave"
                   },
            "args":[
                "--no-capture",
                "--no-capture-stderr",
                "${file}"
            ]
        },
        {
            "name": "Behave Logic Report",
            "type": "python",
            "request": "launch",
            "program": "test/behave/behave_logic_report.py",
            "redirectOutput": true,
            "justMyCode": false,            
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "redirectOutput": true,
            "justMyCode": false,            
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "redirectOutput": true,
            "justMyCode": false,            
            "module": "enter-your-module-name"
        }
    ]
}